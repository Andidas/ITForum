<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="User">

	<resultMap type="entity.User" id="UserResult">
		<id column="uid" jdbcType="INTEGER" property="uid" />
		<result column="uname" jdbcType="VARCHAR" property="uname" />
		<result column="upassword" jdbcType="VARCHAR" property="upassword" />
		<result column="uemail" jdbcType="VARCHAR" property="uemail" />
		<result column="uregdate" jdbcType="VARCHAR" property="uregdate" />
		<result column="ubirthady" jdbcType="VARCHAR" property="ubirthady" />
		<result column="usex" jdbcType="INTEGER" property="usex" />
		<result column="uhead" jdbcType="VARCHAR" property="uhead" />
		<result column="usatement" jdbcType="VARCHAR" property="usatement" />
		<result column="ustate" jdbcType="INTEGER" property="ustate" />
		<result column="upoint" jdbcType="INTEGER" property="upoint" />
		<result column="uissectioner" jdbcType="INTEGER" property="uissectioner" />
	</resultMap>

	<select id="queryUserList" resultMap="UserResult">
		select
		uid,uname,upassword,uemail,uregdate,ubirthady,usex,uhead,usatement,ustate,upoint,uissectioner
		from user
	</select>

	<select id="queryUser" parameterType="String" resultMap="UserResult">
		select * from user where uemail = #{_parameter}
	</select>

	<select id="checkUser" parameterType="entity.User" resultMap="UserResult">
		select * from user where uemail = #{uemail} and upassword = #{upassword}
	</select>

	<insert id="addUser" parameterType="entity.User">
		INSERT INTO user
		( uname,
		uemail,
		upassword,
		uregdate
		)
		VALUES
		( #{uname},
		#{uemail},
		#{upassword},
		#{uregdate}
		)
	</insert>
	
	 <update id="updateUser" parameterType="entity.User">
    UPDATE user SET
    uname = #{uname,jdbcType=VARCHAR},
    upassword = #{upassword,jdbcType=VARCHAR},
    uemail = #{uemail,jdbcType=VARCHAR},
    uregdate = #{uregdate,jdbcType=VARCHAR},
    ubirthady = #{ubirthady,jdbcType=VARCHAR},
    usex = #{usex,jdbcType=INTEGER},
    uhead = #{uhead,jdbcType=VARCHAR},
    usatement = #{usatement,jdbcType=VARCHAR},
    ustate = #{ustate,jdbcType=INTEGER},
    upoint = #{upoint,jdbcType=INTEGER},
    uissectioner = #{uissectioner,jdbcType=INTEGER}
    WHERE
    uid = #{uid,jdbcType=INTEGER}
  </update>
  
  <update id="updateUserPasswordByEmail" parameterType="entity.User">
    UPDATE user SET
    upassword = #{upassword,jdbcType=VARCHAR}
    WHERE
    uemail = #{uemail,jdbcType=VARCHAR}
  </update>
</mapper>
