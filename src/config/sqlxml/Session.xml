<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Session">
	
	<resultMap type="entity.Session" id="SessionResult">
		<id column="sid" jdbcType="INTEGER" property="sid" />
		<result column="sname" jdbcType="VARCHAR" property="sname" />
		<result column="smasterid" jdbcType="INTEGER" property="smasterid" />
		<result column="sprofile" jdbcType="VARCHAR" property="sprofile" />
		<result column="sstatement" jdbcType="VARCHAR" property="sstatement" />
		<result column="stopiccount" jdbcType="INTEGER" property="stopiccount" />
		<result column="sclickcount" jdbcType="INTEGER" property="sclickcount" />
		<result column="spicture" jdbcType="VARCHAR" property="spicture" />
	</resultMap>
	<!-- 单个session -->
	<select id="querySessionBySid" parameterType="INTEGER" resultMap="SessionResult">
		select * from `session` where sid=#{_parameter}
	</select>
	
	<!-- 相似版块，5条信息 -->
	<select id="querySameSession" parameterType="entity.Session" resultMap="SessionResult">
		select sid,sname,sstatement from `session` where sprofile=#{sprofile} and sid &lt;&gt; #{sid}
		order by sclickcount DESC
		limit 0,5
	</select>
	
	
	<update id="updateSessionClickCountBySid" parameterType="INTEGER">
		UPDATE `session` set sclickcount = sclickcount+1 where sid= #{_parameter}
	</update>
	
	<update id="addSessionStopiccount" parameterType="INTEGER">
		UPDATE `session` set stopiccount = stopiccount+1 where sid= #{_parameter};
	</update>
	
	<update id="subSessionStopiccount" parameterType="String">
		UPDATE `session` set stopiccount = stopiccount-1 where sname= #{_parameter};
	</update>
	
	<resultMap type="INTEGER" id="querySessionStopicCountResult">		
		<result column="stopiccount" jdbcType="INTEGER" property="stopiccount" />		
	</resultMap>
	<select id="querySessionStopicCount" parameterType="String" resultMap="querySessionStopicCountResult">
		select stopiccount from `session` where sname=#{_parameter};
	</select>
	
</mapper>
